<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fourpx"
    android:layout_marginRight="@dimen/fourpx"
    android:layout_marginTop="@dimen/fourpx"
    android:layout_marginBottom="@dimen/fourpx"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="2"
        app:columnCount="4"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_column="0"
            >

            <ImageView
                android:id="@+id/flight_icon"
                android:layout_width="wrap_content"
                android:layout_height="24dp"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_column="1"
            >

            <TextView
                android:id="@+id/price_tv"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_column="2"
            app:layout_row="0"
            >

            <TextView
                android:id="@+id/from_txt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                style="@style/TextAppearance.AppCompat.Body1"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_column="3">

            <TextView
                    android:id="@+id/to_txt"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"

                    />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnSpan="2">

            <TextView
                    android:id="@+id/stops_txt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                style="@style/TextAppearance.AppCompat.Body1"


                    />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_column="2"
            app:layout_row="1"
            app:layout_columnSpan="2">

            <TextView
                    android:id="@+id/stops_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"

                style="@style/TextAppearance.AppCompat.Body1"


                    />
        </LinearLayout>

    </android.support.v7.widget.GridLayout>


</android.support.v7.widget.CardView>
